<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AN_Family_Task_Management"
        xmlns:EFManagement="clr-namespace:AN_Family_Task_Management.EFManagement"  
        x:Class="AN_Family_Task_Management.MainWindow"
        mc:Ignorable="d"
        Title="Agajan Nazarow Family Task Management Application" Height="450" Width="800">
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="9*" />
            </Grid.ColumnDefinitions>

            <!-- Menu Area -->
            <StackPanel Grid.Column="0">
                <Button x:Name="btnFamilyPerson" Content="Family Person" Click="FamilyPersonSubMenu_Click"/>
                <Button x:Name="btnTask" Content="Task" Click="TaskSubMenu_Click"/>
            </StackPanel>

            <!-- DataGrid Area -->
            <DataGrid Grid.Column="1">
                <DataGrid.DataContext>
                    <EFManagement:CustomDBContext/>
                </DataGrid.DataContext>
            </DataGrid>
        </Grid>
    </Border>
</Window>
